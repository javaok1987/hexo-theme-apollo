doctype
html(lang=config.language)
    head
        include head
    body
        if !/(about)/gi.test(page.path)
            .wrap
                header
                    a.logo-link(href=url_for())
                        img(src=url_for(theme.logo) alt="logo")
                    include nav
        main.container
            block container
        if !/(about)/gi.test(page.path)
            .wrap
                footer
                    block pagination
                    block copyright
        include scripts
